# ============================================
# Telegram Girlfriend Userbot v1.1 - Configuration
# ============================================

# Telegram API credentials (получить на https://my.telegram.org/apps)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# Ваш номер телефона для userbot (например, +79991234567)
# Можно не указывать - программа спросит при первом запуске
PHONE_NUMBER=+79991234567

# Gemini API ключ (получить на https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Bot Configuration (опционально)
# ============================================

# Имя сессии Telegram
SESSION_NAME=girlfriend_userbot

# Личность по умолчанию (default, romantic, playful, mysterious, supportive)
DEFAULT_PERSONALITY=default

# ============================================
# Features (включить/выключить функции)
# ============================================

# Автоматические реакции на сообщения
ENABLE_AUTO_REACTIONS=true

# Сохранение истории диалогов
ENABLE_HISTORY_SAVE=true

# Сбор статистики
ENABLE_STATISTICS=true

# ============================================
# AI Settings (настройки AI)
# ============================================

# Максимальная длина истории диалога (в сообщениях)
MAX_HISTORY_LENGTH=20

# Задержка перед отправкой (в секундах, для имитации печати)
TYPING_DELAY=0.5
